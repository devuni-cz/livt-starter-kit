{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:ssr": "vite build --ssr",
        "prettier": "prettier --write .",
        "pint": "php vendor/bin/pint . --config=/pint.json",
        "rector": "php vendor/bin/rector process",
        "analyse": "php vendor/bin/phpstan analyse",
        "lint": "eslint --ext .js,.vue resources/js",
        "format": "npm run prettier && npm run pint && npm run lint"
    },
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "@tailwindcss/vite": "^4.1.11",
        "@vitejs/plugin-vue": "^6.0.0",
        "axios": "^1.10",
        "concurrently": "^9.2",
        "eslint": "^9.31.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "eslint-plugin-vue": "^10.3.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^2.0.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11",
        "vite": "^7.0.5"
    },
    "dependencies": {
        "@heroicons/vue": "^2.2.0",
        "@inertiajs/vue3": "^2.0.14",
        "@sentry/tracing": "^7.120.3",
        "@sentry/vite-plugin": "^3.6.0",
        "@sentry/vue": "^9.39.0",
        "@vue/server-renderer": "^3.5.17",
        "vue": "^3.5.17",
        "ziggy-js": "^2.5.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.45",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.1",
        "lightningcss-linux-x64-gnu": "^1.30"
    },
    "lint-staged": {
        "**/*.{js,vue,css,scss,html,json,md}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.php": [
            "pint"
        ]
    }
}
